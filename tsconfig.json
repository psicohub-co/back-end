{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ESNext"],
    "types": ["@cloudflare/workers-types", "bun"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@db/*": ["db/*"],
      "@routes/*": ["routes/*"],
      "@lib/*": ["lib/*"],
      "@type/*": ["types/*"],
      "@emails/*": ["emails/*"],
      "@utils/*": ["utils/*"]
    }
  }
}
